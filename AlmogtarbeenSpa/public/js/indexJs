/* Comment Generated by Combres - Resource '~/Scripts/App/Fragments/articles-list-fragment.js' (Mode: Static) */
var ArticlesListFragment = function () {
    self = this;
    var lastPageRequested = 0;
    var elements = { LatestArticles: '.latestArticles' };

    function getMorePosts() {
        var page = $(elements.LatestArticles).last().attr("id");
        if (lastPageRequested < page) {
            lastPageRequested = page;
            var url = "http://www.almogtarbeen.com/almogtarbeen/getmorearticles/" + page;
            $.post(url, function (data) { if (data != "") { $(elements.LatestArticles).last().after(data); } });
        }
    };

    function wireupAutoScorolling() {

        $(window).scroll(function () {
            if ($(window).scrollTop() >= ($(document).height() / 1.1) - $(window).height()) {
                getMorePosts();
            }
        });
    }

    wireupAutoScorolling();
};;



